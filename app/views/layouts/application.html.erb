<!DOCTYPE html>
<html>
<head>
  <title>URLockBox</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="errors">
    <% flash.each do |type, message| %>
      <% message = [message] if message.class == String %>
        <%= content_tag :div, message.join('<br/>').html_safe, class: "flash-#{type}"%>
    <%end%>
  </div>

  <%= yield %>
</div>

</body>
</html>
